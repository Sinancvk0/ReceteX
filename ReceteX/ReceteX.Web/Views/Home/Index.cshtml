@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .big-square-button {
            width: 200px;
            height: 200px;
            border-radius: 20px;
            color: #fff;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: 1.5rem;
            font-weight: bold;
            cursor: pointer;
        }

            .big-square-button i {
                font-size: 3.5rem;
                margin-bottom: 1rem;
            }
    </style>
}
<div class="d-flex justify-content-center align-items-center">
    <div class="row" style="margin-top:10%">
        <div class="col-6">
            <a asp-controller="Prescription" asp-action="Index">
            <div class="big-square-button" style=" background-color: #1ed9ad;">
                <i class="bi bi-pencil-square"></i>
                Reçete Yaz
            </div>
            </a>
        </div>
        <div class="col-6">
            <div class="big-square-button" style=" background-color: #cd5ce0;">
                <i class="bi bi-journal-medical"></i>
                Reçete Arşivi
            </div>
        </div>
    </div>
</div>